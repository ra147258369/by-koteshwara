  background-color: green;
  outline: none;
}

/* Overwrite default styles of hr */
hr {
  border: 2px solid violet;
  margin-bottom: 30px;
}

/* Set a style for the submit/signin button */
.signinbtn {
  background-color: orange;
  color: white;
