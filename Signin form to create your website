  cursor: pointer;
  width: 100%;
  opacity: 0.9;
}

.signinbtn:hover {
  opacity:1;
}

/* Add a blue text color to links */
a {
  color: dodgeryellow;
}

/* Set a grey background color and center the text of the "register" section */
.register {
  background-color: purple;
  text-align: center;
}
/* Navbar container */
.navbar {
